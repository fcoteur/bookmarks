extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Group:
      input#name.form-control(type='text', placeholder='Work, Nico etc.' name='name' value=(undefined===group ? '' : group.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
  ul
    for error in errors
      li!= error.msg